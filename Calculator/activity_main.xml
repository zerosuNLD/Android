<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textReuslt"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="@string/_0"
        android:layout_gravity="center"
        android:gravity="bottom|end"
        android:textSize="30sp"
        />

    <GridLayout
        android:id="@+id/gripLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:rowCount="5"
        android:columnCount="4"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/CE_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/ce"
            android:textSize="25sp"
            android:background="@drawable/button_square" />

        <Button
            android:id="@+id/C_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/button_square"
            android:text="@string/c"
            android:textSize="25sp" />

        <Button
            android:id="@+id/BS_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/bs"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/divide_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/a"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/seven_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_7"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/eight_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_8"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/night_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_9"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/mul_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/x"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/four_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_4"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/five_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_5"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/six_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_6"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/minus_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/b"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>
        <Button
            android:id="@+id/one_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_1"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/two_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_2"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/three_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_3"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/d"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>


        <Button
            android:id="@+id/addOrMinus_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/e"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/zero_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/_0"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/dot_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/f"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

        <Button
            android:id="@+id/equals_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/bang"
            android:textSize="25sp"
            android:background="@drawable/button_square"/>

    </GridLayout>

</LinearLayout>
